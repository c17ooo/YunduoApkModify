<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/airplan_simcard_status" />
        <TextView android:id="@id/airplan_simcard_status" android:layout_width="wrap_content" android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/airplane_time_last" />
        <EditText android:id="@id/airplane_time_last" android:layout_width="wrap_content" android:layout_height="wrap_content" android:hint="@string/airplane_time_default_second" android:inputType="numberDecimal" />
        <Button android:id="@id/airplane_time_last_set" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/airplane_time_last_set" />
    </LinearLayout>
    <CheckBox android:id="@id/airplane_enable" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="false" android:text="@string/airplane_enable" />
    <View android:background="#ff909090" android:layout_width="fill_parent" android:layout_height="1.0dip" android:layout_marginTop="10.0dip" />
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/airplane_count" />
        <TextView android:id="@id/airplane_count" android:layout_width="wrap_content" android:layout_height="wrap_content" />
    </LinearLayout>
    <View android:background="#ff909090" android:layout_width="fill_parent" android:layout_height="1.0dip" android:layout_marginTop="10.0dip" />
    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/airplane_status" />
        <ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent"
          xmlns:android="http://schemas.android.com/apk/res/android">
            <TextView android:id="@id/airplane_network_status" android:layout_width="wrap_content" android:layout_height="wrap_content" />
        </ScrollView>
    </LinearLayout>
</LinearLayout>