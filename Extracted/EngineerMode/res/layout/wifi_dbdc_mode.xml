        <ScrollView android:id="@id/partition_view" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:id="@id/text_debug_log" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/wifi_item_tx" />
        </ScrollView>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@id/Debug_setting" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <EditText android:textSize="20.0sp" android:id="@id/Debug_setting_value" android:layout_width="fill_parent" android:layout_height="wrap_content" />
        <Button android:id="@id/Debug_setting_set" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/wifi_item_tx" />
    </LinearLayout>
</FrameLayout>